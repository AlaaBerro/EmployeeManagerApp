@model IEnumerable<EmployeeManagerApp.Models.Job>

@{
    ViewData["Title"] = "Index";
}

<h1>Available Jobs</h1>

<button class="btn btn-sm btn-primary m-2" id="btnAddJob">Add Job</button>

<div class="container">
    <div class="row">
        <div class="col-md-6">
            <table class="table table-bordered">
                <thead>
                    <tr class="text-center">
                        <th>Id</th>
                        <th>Category</th>
                        <th>Operations</th>
                    </tr>
                </thead>
                <tbody class="text-center" id="table_data"></tbody>
            </table>
        </div>
        <div class="col-md-6">
            
            <div id="right-side">
                <!-- Employee data will be displayed here -->
            </div>
        </div>
    </div>
</div>

<!--Modal-->
<div class="madal fade modal" id="EmployeeMadal">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="text-info modal-title" id="employeeHeading">Add Job</h1>
                <button class="close text-danger" data-dismiss="modal">&times;</button>
            </div>
            <div class="modal-body">
                <form method="post">
                    <div class="form-group" id="Id">
                        <label>Id</label>
                        <input type="text" class="form-control" id="JobId" disabled="disabled" />
                    </div>
                    
                    <div class="form-group">
                        <label for="Category">Category</label>
                        <select name="Category" id="Category" class="form-control" required>
                            <option value="">Select Category</option>
                            @foreach (var category in Enum.GetValues(typeof(Category)))
                            {
                                <option value="@category">@category</option>
                            }
                        </select>
                    </div>
                    
                </form>

            </div>
            <div class="modal-footer">
                <button class="btn btn-primary" onclick="AddJob();" id="AddEmployee">Save</button>
                <button class="btn btn-warning" onclick="UpdateJob();" style="display:none" id="btnUpdate">Update</button>
                <button class="btn btn-danger btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/jquery/dist/jquery.js"></script>
<script src="~/js/customjob.js"></script>



