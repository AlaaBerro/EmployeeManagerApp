@model IEnumerable<EmployeeManagerApp.Models.EmployeeJob>

@{
    ViewData["Title"] = "Index";
}


<h1>Employees Job</h1>


<button class="btn btn-sm btn-primary m-2" id="btnAddEmployeeJob" onclick="GetId();">Add Employee Job</button>

<table class="table table-bordered">
    <thead>
        <tr class="text-center">  
            <th>Employee Id</th>
            <th>Job Id</th>
            <th>Employee Name</th>
            <th>Job Category</th>
            <th>Activated</th>
            <th>Operations</th>
        </tr>
    </thead>
    <tbody class="text-center" id="table_data"></tbody>
</table>

<!--Modal-->
<div class="madal fade modal" id="EmployeeMadal">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="text-info modal-title" id="employeeHeading">Add Employee</h1>
                <button class="close text-danger" data-dismiss="modal">&times;</button>
            </div>
            <div class="modal-body">
                <form method="post">
                    <div class="form-group" id="empId">
                        <label for="employeeId"><strong>Employee ID:</strong></label>
                        <input type="number" id="employeeId" class="form-control" required />
                    </div>
                    <div class="form-group">
                        <label for="jobId"><strong>Job ID:</strong></label>
                        <input type="number" id="jobId" class="form-control" required />
                    </div>
                    <div class="form-group">
                        <label for="IsActivated"><strong>Activation:</strong></label>
                        <div class="form-check">
                            <input type="checkbox" name="IsActivated" id="IsActivated" class="form-check-input" />
                            <label class="form-check-label" for="IsActivated">Activate</label>
                        </div>
                    </div>
                </form>


            </div>
            <div class="modal-footer">
                <button class="btn btn-primary" onclick="AddEmployeeJob();" id="AddEmployee">Save</button>
                <button class="btn btn-warning" onclick="UpdateEmployeeJob();" style="display:none" id="btnUpdate">Update</button>
                <button class="btn btn-danger btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>



<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/jquery/dist/jquery.js"></script>
<script src="~/js/employeejobcustom.js"></script>